@using CustomForms.Data;



@switch (FormInputField.FieldType)
{
    case Statics.FieldTypes.text:
        <InputText @bind-Value="@FormInputField.Data" />
        break;
    case Statics.FieldTypes.number:
        <InputNumber TValue="int" @bind-Value="@FormInputField.IntegerData" />
        break;

    default:
        <InputTextArea @bind-Value="@FormInputField.Data" />
        break;

}




@code {
    [Parameter]
    public FormInputField FormInputField { get; set; }
}